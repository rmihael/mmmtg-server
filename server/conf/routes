# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /cards                      com.grumpycats.mmmtg.ComponentsRegistry.cardsService.index
POST    /cards                      com.grumpycats.mmmtg.ComponentsRegistry.cardsService.create
GET     /card/:block/:name          com.grumpycats.mmmtg.ComponentsRegistry.cardsService.findByName(name: String, block: String)
GET     /card/:id                   com.grumpycats.mmmtg.ComponentsRegistry.cardsService.findById(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
